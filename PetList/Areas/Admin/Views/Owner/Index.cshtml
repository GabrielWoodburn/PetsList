@model IEnumerable<Owner>

@{
	ViewData["Title"] = " | Manage Owners";
}

<h1 class="mb-2">Manage Owners</h1>
<ul class="list-group">
	<li class="list-group-item">
		<h5 class="mt-1"><a asp-action="Add">Add an Owner</a></h5>
	</li>
	<li class="list-group-item">
		<form asp-action="Select" method="post" class="form-inline">
			<h5 class="mt-1 mr-5">Select an Owner</h5>
			<select name="id" class="form-control ml-2 mr-2"
					asp-items='@new SelectList(Model, "OwnerId", "FullName")'></select>
			<input type="submit" name="Operation" value="View Pets"
				   class="ml-2 mr-2" my-button />
			<input type="submit" name="Operation" value="Edit"
				   class="ml-2 mr-2" my-button />
			<input type="submit" name="Operation" value="Delete"
				   class="ml-2 mr-2" my-button />
		</form>
	</li>
</ul>