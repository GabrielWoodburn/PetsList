@model  SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var pet in Model.Pets) {
        <tr>
            <td>
                <partial name="_PetLinkPartial" model="@pet" />
            </td>
            <td>@pet.Classification.Name</td>
            <td>
                @foreach(PetOwner ba in pet.PetOwners) {
                    <div><partial name="_OwnerLinkPartial" model="@ba.Owner" /></div>
                }
            </td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@pet.PetId"
                       my-button>Edit</a>
                    <a asp-action="Delete" asp-route-id="@pet.PetId"
                       my-button>Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
