@model Owner

@{
	ViewData["Title"] = " | Owner";
}

<h1>Owner</h1>

<table class="table table-bordered table-sm">
	<thead>
		<tr class="thead-dark">
			<th>@Model.FullName</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				@foreach (var ba in Model.PetOwners)
				{
					<p><partial name="_PetLinkPartial" model="@ba.Pet" /></p>
				}
			</td>
		</tr>
	</tbody>
</table>