@model Pet

@{
	ViewData["Title"] = " | Pet Details";
}

<h1>Pet Details</h1>

<table class="table table-bordered table-sm">
	<thead>
		<tr class="thead-dark">
			<th>Name:</th>
			<th>@Model.Name</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>@(Model.PetOwners.Count > 1 ? "Owners" : "Owner")</td>
			<td>
				@foreach (PetOwner ba in Model.PetOwners)
				{
					<p><partial name="_OwnerLinkPartial" model="@ba.Owner" /></p>
				}
			</td>
		</tr>
		<tr><td>Weight:</td><td>@Model.Weight.ToString("c")</td></tr>
		<tr><td>Classification:</td><td>@Model.Classification.Name</td></tr>
	</tbody>
</table>

<form asp-action="Add" asp-controller="Cart" method="post">
	<button type="submit" name="id" value="@Model.PetId">
		Add To List
	</button>
</form>